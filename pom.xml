<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>dev.wolveringer.datenserver</groupId>
	<artifactId>packets</artifactId>
	<version>0.0.1-SNAPSHOT</version>

	<scm>
		<connection>scm:git:https://gitlab.com/WolverinDEV/DatenServer-Packets.git</connection>
	</scm>
	
	<properties>
		 <protocoll.version.input>src/dev/wolveringer/dataserver/protocoll/packets/PacketVersionTemplate.java</protocoll.version.input>
		 <protocoll.version.output>src/dev/wolveringer/dataserver/protocoll/packets/PacketVersion.java</protocoll.version.output>
  		<github.global.server>git</github.global.server>
	</properties>
	
	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<!-- Create build id -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>buildnumber-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>create</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<buildNumberPropertyName>buildNumber</buildNumberPropertyName>
					<doCheck>false</doCheck>
					<doUpdate>true</doUpdate>
				</configuration>
			</plugin>
			<!-- Building mainfest with buildId -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifestEntries>
							<buildId>${buildNumber}</buildId>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<!-- Replace build id -->
			<plugin>
				<groupId>com.google.code.maven-replacer-plugin</groupId>
				<artifactId>maven-replacer-plugin</artifactId>
				<version>1.4.0</version>
				<configuration>
					<file>${protocoll.version.input}</file>
					<outputFile>${protocoll.version.output}</outputFile>
					<replacements>
						<replacement>
							<token>@buildId@</token>
							<value>${buildNumber}</value>
						</replacement> <!-- PacketVersionTemplate -->
						<replacement>
							<token>PacketVersionTemplate</token>
							<value>PacketVersion</value>
						</replacement> <!-- PacketVersionTemplate -->
					</replacements>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
			<version>1.16.6</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>io.netty</groupId>
			<artifactId>netty-buffer</artifactId>
			<version>4.0.34.Final</version>
		</dependency>
		<dependency>
			<groupId>dev.wolveringer.datenserver</groupId>
			<artifactId>definitions</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>dev.wolveringer.lib</groupId>
			<artifactId>NBTTag</artifactId>
			<version>1.2.1</version>
		</dependency>
	</dependencies>
</project>